%ul.sidebar__list
  - Administrate::Namespace.new(namespace).resources.each do |resource|
    - next unless resource.is_a?(ActiveRecord::Base)
    %li
      = link_to(display_resource_name(resource), [namespace, resource],
        class: "sidebar__link sidebar__link--#{nav_link_state(resource)}")
  %li
    = link_to('Searches', admin_searchjoy_path,
      class: "sidebar__link sidebar__link--passive")
