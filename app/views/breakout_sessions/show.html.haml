- content_for :title, 'Breakout Session'

- if @breakout_session
  .container#breakout-session
    %h1.text-center
      = link_to "< Back to #{@breakout_session.conference_name} Congress",
        conference_path(@breakout_session.conference_slug), class: 'hidden-xs-down'
      = @breakout_session.name.upcase
    %hr.m-b-3
    .row.m-t-2
      .col-sm-9
        .card.m-b-3
          .row.information
            .col-sm-6
              %div
                %small DATE:
                = format_date(@breakout_session)
              %div
                %small SESSION TIME:
                = breakout_session_time(@breakout_session)
            .col-sm-6
              %div
                %small LOCATION:
                = format_location(@breakout_session)
              .organizers
                %small ORGANIZERS:
                %div
                  - @breakout_session.organizers.each do |organizer|
                    = link_to directory_profile_path(organizer.id), class: 'organizer' do
                      .profile
                        .avatar{style: "background-image:url(#{organizer.avatar.url(:thumb)})"}
                        .name
                          = organizer.full_name
        %section.post-comment
          - if user_signed_in?
            = form_tag comment_breakout_session_path(@breakout_session),
              remote: true, class: 'form-inline' do
              .row
                .col-sm-2.text-center
                  .form-group
                    .profile
                      .avatar{style: "background-image:url(#{current_user.avatar.url(:thumb)})"}
                      .name
                        = current_user.full_name
                .col-sm-10
                  .form-group.post-input
                    = text_area_tag 'message', nil, rows: 4,
                      class: 'form-control', placeholder: 'Enter You Message'
                    = submit_tag 'POST', class: 'btn btn-cart'
          - else
            %h5.m-b-2.text-center Post Comments
            %hr
            .text-xs-center= t('.sign_in_to_post_comments_html',
              sign_in: new_user_session_path, sign_up: new_user_registration_path)

        %hr.m-t-3
        %section.comments.m-y-3
          %h5 Comments
          .comments.m-t-2
            - unless @breakout_session.comments.any?
              %div No comments available
            - @breakout_session.comments.order(created_at: :desc).each do |comment|
              - commentator = comment.user
              .row.m-b-2
                .col-sm-2.text-center
                  .profile
                    .avatar{style: "background-image:url(#{comment.user.avatar.url(:thumb)})"}
                .col-sm-10
                  .commentator
                    = commentator.full_name
                    %span
                      = " Â· #{commentator.position} at #{commentator.organization_name}"
                    %small.pull-right
                      = "#{time_ago_in_words(comment.created_at)} ago"
                  .comment
                    = comment.message

      .col-sm-3
        .text-center
          - if user_signed_in?
            - if @breakout_session.attendees.find_by(id: current_user.id)
            - else
              %section.join.m-t-2.m-b-3
                = form_tag join_breakout_session_path(@breakout_session), remote: true do
                  = submit_tag 'JOIN SESSION', class: 'btn btn-cart'
          - else
            %section.join.m-t-2.m-b-3
              %h5.text-center Join Session
              %hr
              .text-xs-center= t('.sign_in_or_sign_up_html',
                sign_in: new_user_session_path, sign_up: new_user_registration_path)

          %section
            %h5 Attendees
            %hr
            .attendees
              - if @breakout_session.attendees.any?
                - @breakout_session.attendees.each do |attendee|
                  = link_to directory_profile_path(attendee.id), class: 'attendee' do
                    .profile
                      .avatar{style: "background-image:url(#{attendee.avatar.url(:thumb)})"}
                      .name
                        = attendee.full_name
              - else
                %div No attendees
