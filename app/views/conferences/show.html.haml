- content_for :title, 'Conference'

- if @conference
  .container#conference
    %h3.m-b-3.text-center
      = "#{@conference.name} Congress"
    .row
      .col-sm-10
        %h5.m-b-1 Breakout Sessions
        %table.table.table-hover
          %thead
            %tr
              %th Name
              %th Day
              %th Time
              %th Organizers
              %th Location
          %tbody
            - @conference.breakout_sessions.each do |session|
              %tr{onclick: "document.location = '#{breakout_session_conference_path(session.conference.slug, session.slug)}'"}
                %td
                  = session.name
                %td
                  = format_date(session)
                %td
                  = breakout_session_time(session)
                %td
                  = format_organizers(session)
                %td
                  = format_location(session)
      .col-sm-2

