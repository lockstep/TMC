%nav.navbar.navbar-light
  .container
    %button{class: "navbar-toggler hidden-sm-up", type: "button",
      :data => { toggle: "collapse", target: "#collapsing-navbar"}}
      &#9776;
    .collapse.navbar-toggleable-xs#collapsing-navbar
      %ul.nav.navbar-nav
        %li.nav-item
          = link_to 'Home', root_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Products', products_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Blog', posts_path, class: 'nav-link'
        %li.nav-item
          = link_to 'About', page_path(:about), class: 'nav-link'
        - if user_signed_in?
          %li.nav-item
            = link_to 'Account', user_path(current_user), class: 'nav-link'
          %li.nav-item.pull-sm-right
            = link_to 'Logout', destroy_user_session_path, method: :delete,
              class: 'nav-link'
        - else
          %li.nav-item.pull-sm-right
            = link_to 'Login', new_user_session_path, class: 'nav-link'
        %li.nav-item.pull-sm-right
          = link_to 'My Cart', order_url(@order), class: 'my-cart',
            data: { turbolinks: false }
= render 'shared/header'
