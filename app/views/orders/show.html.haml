- content_for :title, 'Your Cart'

.container
  .row
    .col-md-8
      %h3
        Your Cart
      #cart-contents.list-group
        - if @order.line_items.empty?
          Your cart is empty.
        - else
          = render @order.line_items
      .text-xs-center
        = link_to 'Keep shopping', products_path, class: 'btn btn-cart'
    .col-md-4
      .cart-actions
        = total_pricing
        = checkout_actions
