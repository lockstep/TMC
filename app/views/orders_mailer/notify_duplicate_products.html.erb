<% content_for :preheader, 'Duplicate Product Items Found!' %>

<tr>
  <td style="font-family: Helvetica, Arial, sans-serif; color: #333333;">
    There are duplicate product items found in <%= @orders.count %> orders within last 24 hours.
  </td>
</tr>
<tr>
  <td style="padding: 10px 0 10px;">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <% @orders.each do |order| %>
        <tr>
          <td style="font-family: Helvetica, Arial, sans-serif; color: #333333;padding: 10px 0;">
            Order ID: <%= order.id %>
          </td>
          <td align="right" style="font-family: Helvetica, Arial, sans-serif; color: #333333;padding: 10px 0;">
            No. of Line Items: <%= order.line_items.count %>
          </td>
        </tr>
        <tr style="border-bottom:1px solid #dedede">
          <td colspan="2">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td style="font-family: Helvetica, Arial, sans-serif; color: #333333;padding-bottom: 10px;">
                  Product IDs: <%= order.line_items.pluck(:product_id).join(', ') %>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      <% end %>
    </table>
  </td>
</tr>
