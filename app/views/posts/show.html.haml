- content_for :title, @post.title
- content_for :meta_tags do
  = meta_tags(title: @post.title,
              description: @post.summary)
.container
  .row
    .col-md-4
    .col-md-8
      %h1
        = @post.title
      %p
        %span.glyphicon.glyphicon-time
          Updated on
          = time_tag @post.updated_at
      %hr/
      = @post.body.html_safe
