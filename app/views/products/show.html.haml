
.container
  .row
    .col-md-8
      %h1
        = @product.name
      %h4
        = "$#{@product.price}"
      %p
        %span.glyphicon.glyphicon-time
          Updated on
          = time_tag @product.updated_at
      = facebook_like
      %hr
      = @product.description.html_safe
      .images-container
        - @product.images.each do |image|
          = image_tag image.image.url
    .col-md-4
      - unless is_in_cart?(@order, @product)
        = add_to_cart
      - else
        This product is already in
        = succeed "." do
          = link_to 'your cart', order_url(@order), data: { turbolinks: false }

= pin_it_on_images
