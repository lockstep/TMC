- content_for :title, 'My Address'
- @active = 'address'

.container#account
  .row
    .col-sm-3
      = render 'users/shared/sidebar'
    .col-sm-9
      %h3 My Address
      = form_for @user do |f|
        = f.hidden_field :editing_address, value: true
        = render 'users/shared/error_messages'
        .form-group
          = f.label :first_name, class: 'form-label'
          = f.text_field :first_name, class: 'form-control'
        .form-group
          = f.label :last_name, class: 'form-label'
          = f.text_field :last_name, class: 'form-control'
        .form-group
          = f.label :address_line_one, class: 'form-label'
          = f.text_field :address_line_one, class: 'form-control'
        .form-group
          = f.label :address_line_two, class: 'form-label'
          = f.text_field :address_line_two, class: 'form-control'
        .form-group
          = f.label :address_city, class: 'form-label'
          = f.text_field :address_city, class: 'form-control'
        .form-group
          = f.label :address_state, class: 'form-label'
          = f.text_field :address_state, class: 'form-control'
        .form-group
          = f.label :address_postal_code, class: 'form-label'
          = f.text_field :address_postal_code, class: 'form-control'
        .form-group
          = f.label :address_country, class: 'form-label'
          = country_select "user", "address_country",
            { priority_countries: ["US", "CA", "GB", "AU"],
              selected: @user.address_country, include_blank: 'Select Country' },
            { class: 'form-control' }
        .form-group
          = f.submit "Save address", class: "btn btn-primary"
