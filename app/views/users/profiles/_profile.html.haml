%tr{onclick: "document.location = '#{directory_profile_path(user.id)}'"}
  %td
    .profile-image{style: "background-image:url(#{user.avatar.url(:thumb)})"}
  %td
    = user.full_name
  %td
    = user.position
  %td
    = user.full_address_country
  %td
    = format_user_certifications(user)
  %td
    = format_user_interests(user)
