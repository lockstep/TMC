<% content_for :preheader, "You have a new private message from #{@author.full_name} on The Montessori Company." %>

<tr>
  <td>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td align="center" style="padding: 20px 0 0 0; font-size: 16px; line-height: 25px; font-family: Helvetica, Arial, sans-serif; color: #666666;" class="padding-copy">
          <p>
            <%= simple_format(@private_message.message) %>
          </p>
          <hr />
          <p>
            Sent by <%= @author.full_name %>
          </p>
        </td>
      </tr>
    </table>
  </td>
</tr>

<%= render 'shared/mailers/button',
  cta: 'Respond', url: "#{directory_profile_url(@author.id, anchor: 'messages')}" %>
